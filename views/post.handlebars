<div id="commentContainer">
<h1 id="commentTitle">{{post.title}}</h1>
<p>Posted by: {{post.user.username}} </p>
<p>on {{post.createdAt}}</p>
<p>{{post.content}}</p>

<h2 id="commentTitle">Comments</h2>
{{#each post.comments}}
  <div class="comment">
    <p>Posted by:{{this.user.username}} on {{format_date this.createdAt}}</p>
    <p>{{this.comment_text}}</p>
  </div>
{{/each}}

{{#if loggedIn}}
  <form id="comment-form">
    <textarea id="textarea" name="comment_text" placeholder="Add a comment" required></textarea>
    <br>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>You must be logged in to comment.</p>
{{/if}}
</div>
<script src="/js/comment.js"></script>