<h1>Your Dashboard</h1>
<a href="/dashboard/new">Create New Post</a>
{{#each posts}}
  <div class="post">
    <h2><a href="/dashboard/edit/{{this.id}}">{{this.title}}</a></h2>
    <p>Posted by: {{this.user.username}} </p>
    <p>on {{this.createdAt}}</p>
    <p>{{this.content}}</p>
  </div>
{{/each}}